@model PinterestClone.Models.Pin
@{
ViewData["Title"] = "Pin Details";
var userId = Context.Session.GetInt32("UserId");
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Title"
                    style="max-height:350px;object-fit:cover;">
                <div class="card-body">
                    <h3 class="card-title">@Model.Title</h3>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                    <p class="card-text">@Model.Description</p>
                    }
                    <p class="text-muted">By @Model.User?.Name</p>

                    @if (userId != null)
                    {
                    var boards = ViewBag.Boards as List<PinterestClone.Models.Board>;
                        if (boards != null && boards.Any())
                        {
                        <form asp-action="Save" method="post" class="mt-3">
                            <input type="hidden" name="pinId" value="@Model.Id" />
                            <div class="input-group mb-2">
                                <select name="boardId" class="form-select" required>
                                    <option value="">Select board</option>
                                    @foreach (var board in boards)
                                    {
                                    <option value="@board.Id">@board.Title</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-success">Kaydet</button>
                            </div>
                        </form>
                        }
                        <hr />
                        <div class="mt-3">
                            <h5>Report this pin</h5>
                            <form asp-action="Report" method="post">
                                <input type="hidden" name="pinId" value="@Model.Id" />
                                <div class="mb-2">
                                    <textarea name="reason" class="form-control"
                                        placeholder="Why are you reporting this pin?" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-danger btn-sm">Report</button>
                            </form>
                        </div>
                        }
                        }
                        else
                        {
                        <div class="alert alert-info">You must create a board before saving a pin.</div>
                        }
                </div>
                <div class="mb-4">
                    <h5>Comments (@Model.PinComments?.Count ?? 0)</h5>
                    @if (Model.PinComments != null && Model.PinComments.Any())
                    {
                    <ul class="list-group mb-3">
                        @foreach (var comment in Model.PinComments.OrderByDescending(c => c.CreatedAt))
                        {
                        <li class="list-group-item">
                            <strong>@comment.User?.Name</strong> <span class="text-muted"
                                style="font-size:0.9em">@comment.CreatedAt.ToLocalTime().ToString("g")</span>
                            <div>@comment.Content</div>
                        </li>
                        }
                    </ul>
                    }
                    else
                    {
                    <p>No comments yet.</p>
                    }
                </div>
                @if (userId != null)
                {
                <div class="mb-3">
                    <h6>Add Comment</h6>
                    @if (TempData["CommentError"] != null)
                    {
                    <div class="alert alert-danger">@TempData["CommentError"]</div>
                    }
                    <form asp-action="AddComment" method="post">
                        <input type="hidden" name="pinId" value="@Model.Id" />
                        <div class="mb-2">
                            <textarea name="content" class="form-control" rows="3" placeholder="Write your comment..."
                                required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Comment</button>
                    </form>
                </div>
                }
                else
                {
                <div class="alert alert-info">Please <a href="/User/Login">login</a> to comment.</div>
                }
                <a asp-action="Index" class="btn btn-secondary mt-3">Back to All Pins</a>
            </div>
        </div>
    </div>