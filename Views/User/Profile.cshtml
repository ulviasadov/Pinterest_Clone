@foreach (var follower in (List<PinterestClone.Models.User>)ViewBag.FollowersList)
    {
    <li class="list-group-item d-flex align-items-center">
        <img src="@(string.IsNullOrWhiteSpace(follower.ProfileImagePath) ? Url.Content(" ~/images/PP.jpg") :
            follower.ProfileImagePath)" class="rounded-circle me-2" style="width:32px;height:32px;object-fit:cover;" />
        <span>@follower.Name</span>
    </li>
    }
    @foreach (var following in (List<PinterestClone.Models.User>)ViewBag.FollowingList)
        {
        <li class="list-group-item d-flex align-items-center">
            <img src="@(string.IsNullOrWhiteSpace(following.ProfileImagePath) ? Url.Content(" ~/images/PP.jpg") :
                following.ProfileImagePath)" class="rounded-circle me-2"
                style="width:32px;height:32px;object-fit:cover;" />
            <span>@following.Name</span>
        </li>
        }
        @model PinterestClone.Models.User
        @{
        ViewData["Title"] = "User Profile";
        var pins = ViewBag.Pins as List<PinterestClone.Models.Pin>;
            var boards = ViewBag.Boards as List<PinterestClone.Models.Board>;
                }
                <div class="container mt-4">
                    <div class="row mb-4">
                        <div class="col-md-8 offset-md-2">
                            <div class="card">
                                <div class="card-body d-flex align-items-center">
                                    @{
                                    var isFollowing = ViewBag.IsFollowing as bool? ?? false;
                                    var defaultProfileImage = Url.Content("~/images/PP.jpg");
                                    var showImage = !string.IsNullOrWhiteSpace(Model.ProfileImagePath) ?
                                    Model.ProfileImagePath : defaultProfileImage;
                                    }
                                    <div class="d-flex align-items-center w-100">
                                        <img src="@showImage" alt="Profile Photo" class="rounded-circle me-3"
                                            style="width:80px;height:80px;object-fit:cover; cursor:pointer;"
                                            data-bs-toggle="modal" data-bs-target="#profilePhotoModal" />
                                        <div class="d-flex flex-column justify-content-center">
                                            <h2 class="card-title mb-1">@Model.Name</h2>
                                            <div class="mb-0">
                                                <span class="me-3">Pins: @ViewBag.PinCount</span>
                                                <span class="me-3" style="cursor:pointer;" data-bs-toggle="modal"
                                                    data-bs-target="#followersModal">Followers:
                                                    @ViewBag.FollowersCount</span>
                                                <span style="cursor:pointer;" data-bs-toggle="modal"
                                                    data-bs-target="#followingModal">Following:
                                                    @ViewBag.FollowingCount</span>
                                            </div>
                                        </div>
                                        <div id="follow-actions" class="ms-auto">
                                            @if (!isFollowing)
                                            {
                                            <button id="followBtn" class="btn btn-primary ms-3"
                                                data-user-id="@Model.Id">Follow</button>
                                            }
                                            else
                                            {
                                            <button id="unfollowBtn" class="btn btn-secondary ms-3"
                                                data-user-id="@Model.Id">Unfollow</button>
                                            }
                                        </div>
                                    </div>
                                    <script>
                                        document.addEventListener('DOMContentLoaded', function () {
                                            const followBtn = document.getElementById('followBtn');
                                            const unfollowBtn = document.getElementById('unfollowBtn');
                                            const userId = followBtn ? followBtn.getAttribute('data-user-id') : (unfollowBtn ? unfollowBtn.getAttribute('data-user-id') : null);

                                            if (followBtn) {
                                                followBtn.addEventListener('click', function (e) {
                                                    e.preventDefault();
                                                    fetch('/Follow/Follow', {
                                                        method: 'POST',
                                                        headers: { 'Content-Type': 'application/json' },
                                                        body: JSON.stringify({ userId: userId })
                                                    })
                                                        .then(res => {
                                                            if (res.ok) {
                                                                location.reload();
                                                            }
                                                        });
                                                });
                                            }
                                            if (unfollowBtn) {
                                                unfollowBtn.addEventListener('click', function (e) {
                                                    e.preventDefault();
                                                    fetch('/Follow/Unfollow', {
                                                        method: 'POST',
                                                        headers: { 'Content-Type': 'application/json' },
                                                        body: JSON.stringify({ userId: userId })
                                                    })
                                                        .then(res => {
                                                            if (res.ok) {
                                                                location.reload();
                                                            }
                                                        });
                                                });
                                            }
                                        });
                                    </script>
                                    <!-- Followers Modal -->
                                    <div class="modal fade" id="followersModal" tabindex="-1"
                                        aria-labelledby="followersModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="followersModalLabel">Followers</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    @if (ViewBag.FollowersList != null && ((List
                                                    <PinterestClone.Models.User>
                                                        )ViewBag.FollowersList).Any())
                                                        {
                                                        <ul class="list-group">
                                                            @foreach (var follower in (List
                                                            <PinterestClone.Models.User>
                                                                )ViewBag.FollowersList)
                                                                {
                                                                <li class="list-group-item">@follower.Name
                                                                    (@follower.Email)
                                                                </li>
                                                                }
                                                        </ul>
                                                        }
                                                        else
                                                        {
                                                        <p>No followers yet.</p>
                                                        }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Following Modal -->
                                    <div class="modal fade" id="followingModal" tabindex="-1"
                                        aria-labelledby="followingModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="followingModalLabel">Following</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    @if (ViewBag.FollowingList != null && ((List
                                                    <PinterestClone.Models.User>
                                                        )ViewBag.FollowingList).Any())
                                                        {
                                                        <ul class="list-group">
                                                            @foreach (var following in (List
                                                            <PinterestClone.Models.User>
                                                                )ViewBag.FollowingList)
                                                                {
                                                                <li class="list-group-item">@following.Name
                                                                    (@following.Email)</li>
                                                                }
                                                        </ul>
                                                        }
                                                        else
                                                        {
                                                        <p>Not following anyone yet.</p>
                                                        }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(Model.Bio))
                                {
                                <p class="card-text"><strong>Bio:</strong> @Model.Bio</p>
                                }
                            </div>
                            <!-- Bio Edit Modal -->
                            <div class="modal fade" id="bioModal" tabindex="-1" aria-labelledby="bioModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="bioModalLabel">Edit Bio</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form asp-action="UpdateBio" method="post">
                                                <div class="form-group mb-2">
                                                    <label for="bioInput">Bio</label>
                                                    <textarea id="bioInput" name="Bio" class="form-control"
                                                        rows="3">@Model.Bio</textarea>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Save</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
                <!-- Profile Photo Modal -->
                <div class="modal fade" id="profilePhotoModal" tabindex="-1" aria-labelledby="profilePhotoModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="profilePhotoModalLabel">Profile Photo</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                                <img src="@showImage" alt="Profile Photo" class="img-thumbnail mb-2 rounded-circle"
                                    style="max-width:180px;max-height:180px;object-fit:cover;" />
                                @if (!string.IsNullOrWhiteSpace(Model.ProfileImagePath))
                                {
                                <form asp-action="RemoveProfilePhoto" method="post" class="mb-3">
                                    <button type="submit" class="btn btn-danger">Remove Photo</button>
                                </form>
                                }
                                <form asp-action="UploadProfilePhoto" method="post" enctype="multipart/form-data">
                                    <div class="form-group mb-2">
                                        <input type="file" name="profileImage" class="form-control" accept="image/*" />
                                    </div>
                                    <button type="submit" class="btn btn-primary">Upload New Photo</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-8 offset-md-2">
                        <button class="btn btn-outline-info mb-2" data-bs-toggle="modal" data-bs-target="#bioModal">Edit
                            Bio</button>
                        <h4>Your Boards</h4>
                        @if (boards != null && boards.Any())
                        {
                        <ul class="list-group mb-3">
                            @foreach (var board in boards)
                            {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@board.Title</strong>
                                    @if (!string.IsNullOrWhiteSpace(board.Description))
                                    {
                                    <span class="text-muted">- @board.Description</span>
                                    }
                                </div>
                                <div>
                                    <a asp-controller="Board" asp-action="Edit" asp-route-id="@board.Id"
                                        class="btn btn-sm btn-warning me-2">Edit</a>
                                    <a asp-controller="Board" asp-action="Delete" asp-route-id="@board.Id"
                                        class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this board?');">Delete</a>
                                </div>
                            </li>
                            }
                        </ul>
                        }
                        else
                        {
                        <p>No boards yet.</p>
                        }
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-8 offset-md-2">
                        <h4>Your Pins</h4>
                        @if (pins != null && pins.Any())
                        {
                        <div class="row">
                            @foreach (var pin in pins)
                            {
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <img src="@pin.ImagePath" class="card-img-top" alt="@pin.Title"
                                        style="height: 150px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">@pin.Title</h5>
                                        @if (!string.IsNullOrEmpty(pin.Description))
                                        {
                                        <p class="card-text">@pin.Description</p>
                                        }
                                        <a asp-controller="Pin" asp-action="Details" asp-route-id="@pin.Id"
                                            class="btn btn-link p-0">Details</a>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                        }
                        else
                        {
                        <p>No pins yet.</p>
                        }
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-8 offset-md-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Home</a>
                    </div>
                </div>
                </div>