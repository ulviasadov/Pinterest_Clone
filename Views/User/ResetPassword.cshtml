@{
    ViewData["Title"] = "Reset Password";
    var token = ViewBag.Token as string;
}

<div class="container mt-5">
    <h2>Reset Password</h2>
    <p>Enter your new password below.</p>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form method="post" asp-action="ResetPassword">
        <input type="hidden" name="token" value="@token" />
        <div class="mb-3">
            <label for="newPassword" class="form-label">New Password</label>
            <input type="password" name="newPassword" class="form-control" id="newPassword" required minlength="3">
        </div>
        <button type="submit" class="btn btn-success">Reset Password</button>
        <a asp-action="Login" class="btn btn-link">Back to Login</a>
    </form>
</div>
